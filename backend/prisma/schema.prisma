generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

enum PlanType {
  FREE
  PAID
  FREEMIUM
}

enum LabelCategory {
  PRICING      // Free, Paid, Trial, etc.
  CAPABILITY   // Assistant, Automation, API, etc.
  STATUS       // Popular, New, Trending, Featured
  SPECIALTY    // Image, Text, Audio, Video, Code, Design, etc.
}

model Category {
  id              Int      @id @default(autoincrement())
  name            String   @unique
  description     String   // Short one-liner for cards
  fullDescription String   // Complete description for detail page
  iconUrl         String
  bannerUrl       String?
  createdAt       DateTime @default(now())
  tools           Tool[]   // one category â†’ many tools
}

model Label {
  id          Int            @id @default(autoincrement())
  name        String         // e.g., "Popular", "Free Trial", "AI Assistant"
  slug        String         @unique // e.g., "popular", "free-trial", "ai-assistant"
  category    LabelCategory  // PRICING, CAPABILITY, STATUS, or SPECIALTY
  color       String?        // hex color for display (e.g., "#3b82f6")
  description String?
  createdAt   DateTime       @default(now())
  
  tools       ToolLabel[]
}

model ToolLabel {
  id        Int      @id @default(autoincrement())
  toolId    Int
  labelId   Int
  createdAt DateTime @default(now())
  
  tool      Tool     @relation(fields: [toolId], references: [id], onDelete: Cascade)
  label     Label    @relation(fields: [labelId], references: [id], onDelete: Cascade)
  
  @@unique([toolId, labelId]) // Prevent duplicate labels on same tool
}

model Tool {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  description String
  url         String
  imageUrl     String
  bannerUrl    String?
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  planType    PlanType
  isTrending  Boolean    @default(false)
  isNew       Boolean    @default(false)
  viewCount   Int        @default(0)
  favoriteCount Int      @default(0)
  createdAt   DateTime   @default(now())

  // opposite relations
  reviews     Review[]     @relation("ToolReviews")
  favorites   Favorite[]   @relation("ToolFavorites")
  labels      ToolLabel[]  // many-to-many with Label
}

model Review {
  id           Int      @id @default(autoincrement())
  content      String?
  rating       Int
  createdAt    DateTime @default(now())
  userId       Int
  toolId       Int
  helpfulVotes Int      @default(0)

  user User @relation(fields: [userId], references: [id])
  tool Tool @relation("ToolReviews", fields: [toolId], references: [id])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  userId    Int
  toolId    Int

  user User @relation(fields: [userId], references: [id])
  tool Tool @relation("ToolFavorites", fields: [toolId], references: [id])
  
  @@unique([userId, toolId])
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  password     String
  role         UserRole   @default(USER)
  joinedAt     DateTime   @default(now())
  avatarUrl    String
  bio          String
  helpfulVotes Int        @default(0)

  reviews      Review[]
  favorites    Favorite[]
}
